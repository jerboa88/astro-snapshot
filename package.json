{
	"name": "astro-snapshot",
	"version": "0.1.0",
	"description": "Astro integration for generating screenshots of pages using Puppeteer.",
	"keywords": [
		"withastro",
		"astro",
		"astro-integration",
		"screenshot",
		"puppeteer",
		"social-images",
		"og-images",
		"preview",
		"image",
		"images",
		"seo"
	],
	"author": "John Goodliff (https://johng.io)",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"prepublishOnly": "npm run build",
		"format:check": "prettier --check .",
		"format:write": "prettier --write .",
		"upgrade-interactive": "bunx ncu -i --format group"
	},
	"trustedDependencies": [
		"puppeteer"
	],
	"peerDependencies": {
		"astro": "^5.0.0"
	},
	"dependencies": {
		"astro": "^5.15.2",
		"puppeteer": "^24.26.1"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/node": "^24.9.2",
		"npm-check-updates": "^19.1.2",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jerboa88/astro-snapshot.git"
	},
	"bugs": {
		"url": "https://github.com/jerboa88/astro-snapshot/issues"
	},
	"homepage": "https://github.com/jerboa88/astro-snapshot#readme",
	"license": "MIT",
	"private": true
}
